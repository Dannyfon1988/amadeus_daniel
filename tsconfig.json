
// opciones de compilación del proyecto

{
  "compilerOptions": {
    "target": "ES6", // Define la versión de ECMAScript a la que se transpilara el código
    "module": "CommonJS", //  permite importar y exportar módulos con require() y module.exports.
    "outDir": "./dist",
    "rootDir": "./src", // Define la carpeta raíz del código fuente
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "src/types"]
}

